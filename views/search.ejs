<!-- views/search.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Company Reviews App</title>
  <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
  <h1>Company Reviews App</h1>
  <header>
    <nav>
      <ul>
        <li><a href="/company/add-company">Add a Company</a></li>
        <li><a href="/company/add-review">Add a Review</a></li>
        <li><a href="/company/search">Search for a Company</a></li>
      </ul>
    </nav>
  </header>
  <h2>Search for a Company</h2>
  <form action="/company/search" method="POST">
    <input type="text" name="companyName" placeholder="Company Name" required>
    <button type="submit">Search</button>
  </form>
  <div class="container">
    <h2>Search Results</h2>
    <ul>
      <% if (results && results.length > 0) { %>
        <% results.forEach(result => { %>
          <li><a href="/company/details/<%= result.id %>"><%= result.name %></a></li>
        <% }); %>
      <% } else { %>
        <p>No results found for the specified company.</p>
      <% } %>
    </ul>
  </div>
</body>
</html>
